rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helpers
    function isSignedIn() {
      return request.auth != null;
    }
    function isAdmin() {
      return isSignedIn()
             && firestore.exists(/databases/(default)/documents/adminEmails/$(request.auth.token.email));
    }
    function isImage() {
      return request.resource != null
             && request.resource.contentType.matches('image/.*');
    }
    function withinSizeLimit() {
      // 10 MB max per file
      return request.resource.size < 10 * 1024 * 1024;
    }

    // Public read for all uploaded images (they are served via download URLs)
    match /{allPaths=**} {
      allow read: if true;
    }

    // Attendee uploads: attendees/{uid}/...
    match /attendees/{uid}/{path=**} {
      allow write: if request.auth.uid == uid && isImage() && withinSizeLimit();
    }

    // Attendee uploads (alternate path): users/{uid}/attendees/...
    match /users/{uid}/attendees/{path=**} {
      allow write: if request.auth.uid == uid && isImage() && withinSizeLimit();
    }

    // Vendor uploads: vendors/{vendorId}/{uid}/...
    match /vendors/{vendorId}/{uid}/{path=**} {
      allow write: if request.auth.uid == uid && isImage() && withinSizeLimit();
    }

    // Admin can upload anywhere
    match /{allPaths=**} {
      allow write: if isAdmin() && isImage() && withinSizeLimit();
    }
  }
}
