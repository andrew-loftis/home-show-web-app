rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helpers
    function isSignedIn() {
      return request.auth != null;
    }
    function isAdmin() {
      return isSignedIn()
             && get(/databases/(default)/documents/users/$(request.auth.uid)).data.security.isAdmin == true;
    }
    function isVendorOwner(vendorId) {
      return isSignedIn()
             && get(/databases/(default)/documents/vendors/$(vendorId)).data.ownerUid == request.auth.uid;
    }
    function isImage() {
      return request.resource != null
             && request.resource.contentType.matches('image/.*');
    }
    function withinSizeLimit() {
      // 10 MB max (adjust if you need)
      return request.resource.size < 10 * 1024 * 1024;
    }

    // Public read for all uploaded images
    match /{allPaths=**} {
      allow read: if true;
    }

    // Attendee uploads: attendees/{uid}/...
    match /attendees/{uid}/{path=**} {
      allow write: if request.auth.uid == uid && isImage() && withinSizeLimit();
    }

    // Vendor uploads: vendors/{vendorId}/{uid}/...
    match /vendors/{vendorId}/{uid}/{path=**} {
      allow write: if (request.auth.uid == uid && isImage() && withinSizeLimit())
                   && (isVendorOwner(vendorId) || isAdmin());
    }
  }
}